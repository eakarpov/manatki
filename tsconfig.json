{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "test"
  ]
}
